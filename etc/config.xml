<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <yireo_nextgenimages>
            <settings>
                <enabled>1</enabled>
                <debug>0</debug>
                <log>0</log>
                <convert_images>1</convert_images>
                <convert_css_backgrounds>0</convert_css_backgrounds>
                <target_directory>same_as_source</target_directory>
                <cache_directory>media/nextgenimages/</cache_directory>
                <hash>0</hash>
                <convert_on_save>0</convert_on_save>
                <lazy_loading>1</lazy_loading>
            </settings>
        </yireo_nextgenimages>
    </default>
</config>
