<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block
                name="yireo_nextgenimages.gallery-additions"
                template="Yireo_NextGenImages::hyva/gallery-additions.phtml"/>
        </referenceContainer>

        <referenceContainer name="before.body.end">
            <block
                name="yireo_nextgenimages.configurable-additions"
                after="product.info.options.configurable.js"
                template="Yireo_NextGenImages::hyva/configurable-additions.phtml"
            />
        </referenceContainer>
    </body>
</page>
